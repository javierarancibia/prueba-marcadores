<p id="notice"><%= notice %></p>
<%= link_to 'Nuevo Marcador (modo HTML)', new_bookmark_path %> /
<%= link_to  "Nuevo Tipo (Modo HTML)", new_type_path %>

<h1>Crea tus marcadores</h1>
<%= render 'form', bookmark: @bookmark%>

<table>
  <thead>
    <tr>
      <h2>Categorias</h2>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="tbody">
    <% @bookmarks.each do |bookmark| %>
      <tr id="bookmark_<%=bookmark.id%>">
        <%= render bookmark %>
      </tr>
    <% end %>

  </tbody>
</table>

  </tbody>

<%= column_chart @bookmarks_graphic %>
<%= pie_chart @bookmarks_graphic %>

<h2>Crea tus tematicas</h2>
<%= form_with(model: @type, url: create_type_path, method: :post, remote: true) do |form| %>
  <div class="field">
    <%= form.label :theme %>
    <%= form.text_field :theme %>
  </div>

  <div class="field">
    <%= form.label :link %>
    <%= form.text_field :link %>
  </div>

  <div class="field">
    <%= form.label :bookmark %>
    <%= form.select :bookmark_id, options_for_select(@bookmarks.pluck(:category, :id)), remote: true, prompt: 'Selecciona una categoria' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

    <h2>Categorias / Subcategorias</h2>
    <%#= render @types %>
<% @types.each do |type| %>
  <tr>
    <% if type.bookmark.nil? %>
      <%= 'Marcador vacio' %>
    <% else %>
      <td><%= type.bookmark.category %></td>
    <% end %>
    <ul>
      <li><%= type.theme %></li>
      <li><%= type.link %></li>
      <td><%= link_to 'Editar', edit_type_path(type), remote: true %></td>
      <td><%= link_to 'Borrar', type, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
    </ul>
  </tr>
<% end %>
<br><br><br>



<%#= render 'types/form', type: @type %>
</tbody>







      
        
       
        




