<p id="notice"><%= notice %></p>

<h1>Bookmarks</h1>

<%= render 'form', bookmark: @bookmark%>

<table>
  <thead>
    <tr>
      <h2>Categorias</h2>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="tbody">
    <% @bookmarks.each do |bookmark| %>
      <tr id="bookmark_<%=bookmark.id%>">
        <%= render bookmark %>
      </tr>
    <% end %>

  </tbody>
</table>

    <h2>Categorias / Subcategorias</h2>
    <%#= render @types %>

<% @types.each do |type| %>
  <tr>
    <% if type.bookmark.nil? %>
      <%= 'Bookmark vacio' %>
    <% else %>
      <td><%= type.bookmark.category %></td>
    <% end %>
    <ul>
      <li><%= type.theme %></li>
      <li><%= type.link %></li>
      <td><%= link_to 'Editar', edit_type_path(type) %></td>
      <td><%= link_to 'Borrar', type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </ul>
  </tr>
<% end %>
<br><br><br>

<%= link_to 'Nuevo Marcador', new_bookmark_path %> /
<%= link_to  "Nuevo Tipo", new_type_path %>

<%#= render 'types/form', type: @type %>

<%= form_with(model: @type, remote: true) do |form| %>
<div class="field">
    <%= form.label :theme %>
    <%= form.text_field :theme %>
  </div>

  <div class="field">
    <%= form.label :link %>
    <%= form.text_field :link %>
  </div>

  <div class="field">
    <%= form.label :bookmark %>
    <%= form.select :bookmark_id, options_for_select(@bookmarks.map { |cat| cat.category }), prompt: 'Selecciona una categoria' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>







      
        
       
        




