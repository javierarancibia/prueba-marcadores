<p id="notice"><%= notice %></p>
<%= link_to 'Nuevo Marcador (modo HTML)', new_bookmark_path %> /
<%= link_to  "Nuevo Tipo (Modo HTML)", new_type_path %>

<h2 style="margin-bottom:20px; margin-top:20px;">Crea tus marcadores</h2>
<%= render 'form', bookmark: @bookmark%>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Categorias</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="tbody" class="container">
    <div class="row">
      <div class="col-sm">
      <% @bookmarks.each do |bookmark| %>
        <tr id="bookmark_<%=bookmark.id%>">
          <%= render bookmark %>
        </tr>
      <% end %>
      </div>
    </div>
  </tbody>
</table>

  </tbody>

<%= column_chart @bookmarks_graphic %>
<%= pie_chart @bookmarks_graphic %>

<h2>Crea tus tematicas</h2>
<%= form_with(model: @type, url: create_type_path, method: :post, remote: true) do |form| %>
  <div class="field">
    <%= form.label :theme %>
    <%= form.text_field :theme %>
  </div>

  <div class="field">
    <%= form.label :link %>
    <%= form.text_field :link %>
  </div>

  <div class="field">
    <%= form.label :bookmark %>
    <%= form.select :bookmark_id, options_for_select(@bookmarks.pluck(:category, :id)), remote: true, prompt: 'Selecciona una categoria' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

