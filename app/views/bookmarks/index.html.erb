<div class="jumbotron bg-light">
        <h1 class="text-secondary">Creador de marcadores</h1>
        <%=link_to 'Nuevo Marcador (modo HTML)', new_bookmark_path, class: 'btn btn-info mx-5 my-5 text-white' %>
        <%= link_to  "Nuevo Tipo (Modo HTML)", new_type_path, class: 'btn btn-info mx-5 text-white' %>
        <%= link_to  "Marcadores en formato JSON", get_api_path, class: 'btn btn-info mx-5 text-white' %>
</div>



<h2 style="margin-bottom:20px; margin-top:20px;">Crea tus marcadores</h2>
<%= render 'form', bookmark: @bookmark%>

<%= search_form_for @q do |f| %>
  <div class="form-group">
    <%= f.label :status_eq, "Estado" %>
    <%= f.select :status_eq, options_for_select(Bookmark.statuses, @q.status_eq) {},{class: "form-control"} %>
  </div>
  <%= f.submit "Buscar por estado", class: "btn btn-primary" %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Categorias</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="tbody" class="container">
    <div class="row">
      <div class="col-sm">
      <% @bookmarks.each do |bookmark| %>
        <tr id="bookmark_<%=bookmark.id%>">
          <%= render bookmark %>
        </tr>
      <% end %>
      </div>
    </div>
  </tbody>
</table>

  </tbody>

<%= column_chart @bookmarks_graphic %>
<%= pie_chart @types_graphic %>

<h2>Crea tus tematicas</h2>
<%= form_with(model: @type, url: create_type_path, method: :post, remote: true) do |form| %>
  <div class="field">
    <%= form.label :Subcategoria %>
    <%= form.text_field :theme, class:"input-group", placeholder: 'Ingresa una subcategoria' %>
  </div>

  <div class="field">
    <%= form.label :link %>
    <%= form.text_field :link, class:"input-group", placeholder: 'Ingresa un Link' %>
  </div>

  <div class="field">
    <%= form.label :elige_un_marcador %>
    <%= form.select :bookmark_id, options_for_select(@bookmarks.pluck(:category, :id)), remote: true, prompt: 'Selecciona una categoria' %>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar', class: "btn btn-info mb-5 btn-block" %>
  </div>
<% end %>

    <h2>Categorias / Subcategorias</h2>
    <%#= render @types %>
<%
=begin%>
 <% @types.each do |type| %>
  <tr>
    <% if type.bookmark.nil? %>
      <%= 'Marcador vacio' %>
    <% else %>
    
      <td><%= type.bookmark.category %></td>
    <% end %>
    <ul>
      <li><%= type.theme %></li>
      <li><%= type.link %></li>
      <td><%= link_to 'Editar', edit_type_path(type) %></td>
      <td><%= link_to 'Borrar', type, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
    </ul>
  </tr>
<% end %> 
<%
=end%>

<div class="card-columns">
   <% @types.reverse.each do |type| %>
     <div class="card bg-info text-white">
     <div class="card-body">
   <% if type.bookmark.nil? %>
      <h5 class="text-danger"><%= 'Marcador vacio / Sin Categoria' %></h5>
      <p class="text-danger"><%= 'Marcador sin Estado' %></p>
    <% else %>
          <h5 class="card-title text-white">Categoria: <%= type.bookmark.category %></h5>
          <p class="card-text"><%= type.bookmark.status %></p>
    <% end %>
       <div class="card-block">
        <p class="card-text">Subcategoria: <%= type.theme %></p>
        <p class="card-text"><%= type.link %></p>
        <span class="card-text text-white"><%= link_to 'Editar', edit_type_path(type) %></span>
        <span class="card-text text-white"><%= link_to 'Borrar', type, method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></span>
       </div>
     </div>
    </div>
   <% end %>
</div>
