<p id="notice"><%= notice %></p>

<h1>Bookmarks</h1>

<%= render 'form', bookmark: @bookmark%>

<table>
  <thead>
    <tr>
      <h2>Categorias</h2>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="tbody">
    <%= render @bookmarks %>
      


        
        <% if @bookmark.types %>
            <% @bookmark.types.each do |type| %>
            <tr>
             <td><%= type.theme %></td>
             <td><%= type.link %></td>
              <td><%= link_to 'X', type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <td><%= link_to 'Edit', edit_type_path(type.id) %></td>
            
            <% end %>
        <% end %>
        <td>
        
  </tbody>
</table>

